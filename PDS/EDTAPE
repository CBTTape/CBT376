)ATTR
_ TYPE(INPUT)
@ TYPE(OUTPUT) INTENS(HIGH) CAPS(ON) JUST(ASIS) COLOR(YELLOW)
! TYPE(OUTPUT) INTENS(HIGH) CAPS(ON) JUST(ASIS) COLOR(GREEN)
$ TYPE(TEXT) INTENS(LOW) CAPS(ON) JUST(LEFT) COLOR(TURQ)
? TYPE(TEXT) INTENS(LOW) JUST(LEFT) COLOR(YELLOW) HILITE(USCORE)
+ TYPE(TEXT) INTENS(LOW) CAPS(ON) JUST(LEFT) COLOR(TURQ)
Â¢ TYPE(TEXT) INTENS(LOW) CAPS(ON) JUST(LEFT) COLOR(GREEN)
)BODY
$                  ********* Tape display facility *********
 COMMAND ==>_VCMD                                               %SCROLL =>_AMT %
%
$                              J         ---- CHPIDS --- DELTA AVG AVG AVG
$VOLSER ADR JOBNAME  TYPE      3 STATUS   #  01 02 03 04 # IO  CON DIS PEN SIO
)MODEL
@VTOLINE
)INIT
 .CURSOR=VCMD
  &AMT=PAGE
  &VCMD='    '
  .HELP=QS
 &ZTDMARK = '                  ********* End of Tape display ***********   '
)PROC
 &PTCBTEXT = &VCMD
)END
